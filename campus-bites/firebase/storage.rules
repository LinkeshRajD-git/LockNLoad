rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Menu item images (admin uploads)
    match /menu-items/{allPaths=**} {
      allow read: if true;
      allow write: if true; // relaxed for dev - tighten in production
    }

    match /menu-images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /user-uploads/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
